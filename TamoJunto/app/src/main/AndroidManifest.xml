<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.renatoandrade.tamojunto">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CreateBusiness"
            android:label="@string/title_activity_create_business"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".BusinessListActivity"
            android:label="@string/title_activity_business_list"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.renatoandrade.tamojunto.MainActivity" />
        </activity>
        <activity
            android:name=".UpdateBusinessActivity"
            android:label="@string/title_activity_update_business"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CreateEventActivity"
            android:label="@string/title_activity_create_event"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".EventListActivity"
            android:label="@string/title_activity_event_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".UpdateEventActivity"
            android:label="@string/title_activity_update_event"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
